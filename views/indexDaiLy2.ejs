<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('header') %> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/stylesheets/organization.css">
        <link rel="stylesheet" href="/stylesheets/adminhome.css">
    </head>

    <body>
        <div class="wrapper">
            <div class="box">
                <%- include('menuDaily')  %> 
            </div>
            <div class="container">
                <div class="row">
                  <div class="nm-fm col-md-12">
                    <h2 class="title">TẠO YÊU CẦU CẤP MỚI CHỨNG THƯ SỐ</h2>
                    <div class="choose-certificate">
                        <a href="/digital-certificate/personal" class="btn btn-primary">Cá nhân</a>
                        <a href="/digital-certificate/organization"  class="btn btn-primary">Tổ chức</a>
                    </div>
                </div>
                      <!-- search -->
                      <form action="" style="width:100%; margin: 5px;padding:25px;margin-top: 2vw;border: solid 0.25px #ccc;">
                        <style>
                            .form-control {
                                height: calc(0.75em + .75rem + 2px);
                                padding: 0;
                            }
                            .form-group{
                                margin-bottom: 0;
                            }
                        </style>
                        <div>
                            <h3>Thông tin tìm kiếm
                            </h3>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Mã phiếu yêu cầu</label>
                                    <div class="col-sm-8">
                                      <input type="text" class="form-control">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Mã khách hàng</label>
                                    <div class="col-sm-8">
                                      <input type="text" class="form-control">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Số CMTND/HC</label>
                                    <div class="col-sm-8">
                                      <input type="text" class="form-control">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="inputState" class="col-sm-4 col-form-label">Tỉnh/Thành phố</label>
                                    <div class="col-sm-8">
                                        <select name="tinhThanh" class="tinhThanh form-control">
                                            <option selected>Chọn tỉnh thành</option>
                                          </select>
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Ngày YC&emsp;Từ ngày:</label>
                                    <div class="col-sm-8">
                                      <input type="date" class="form-control">
                                    </div>
                                  </div>
                            </div>
                            <div class="col">
                                <div class="form-group row">
                                    <label  class="col-sm-4 col-form-label">Trạng thái</label>
                                    <div class="col-sm-8">
                                        <select  class="form-control">
                                            <option selected>Chọn trạng thái</option>
                                            <option value="0">Dự thảo</option>
                                            <option value="1">Chờ duyệt lần 1</option>
                                            <option value="2">Gửi thông tin thuê bao</option>
                                            <option value="3">Đã gửi thông tin thuê bao</option>
                                            <option value="4">Chờ duyệt lần 2</option>
                                            <option value="5">Chưa cấp CTS</option>
                                            <option value="6">Đã cấp CTS</option>
                                          </select>
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Tên giao dịch</label>
                                    <div class="col-sm-8">
                                      <input type="text" class="form-control">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Giấy phép ĐKKD</label>
                                    <div class="col-sm-8">
                                      <input type="text" class="form-control">
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Loại yêu cầu</label>
                                    <div class="col-sm-8">
                                        <select name="goiCTSId" id="servicesFind" class="form-control">
                                            <option selected >Chọn loại yêu cầu</option>
                                          </select>
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Đến ngày:</label>
                                    <div class="col-sm-8">
                                      <input type="date" class="form-control">
                                    </div>
                                  </div>
                            </div>
                        </div>
                        <div style="margin: 0 auto; width: 13%; margin-top:30px" class="search">
                            <input  type="submit" class="btn btn-primary" value="Tìm kiếm">
                        </div>
                        
                    </form>
                </div>
            </div>
            <h3 class="pl-3">Danh sách phiếu yêu cầu</h3>
            <div class="container" style="border: 1px solid #aaaaaa;">
                <br>
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#CTSCaNhan">Cá Nhân</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#CTSDoanhNghiep">Doanh Nghiệp</a>
                  </li>
                </ul>
              
                <!-- Tab panes -->
                <div class="tab-content">
                  <div id="CTSCaNhan" class="container tab-pane active"><br>
                    <div class="row table-wrapper" style="border: 1px solid #aaaaaa;">
                        <table class="table table-bordered" >
                            <thead class="thead-default">
                              <tr>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">STT</th>
                                <th scope="col">Mã yêu cầu</th>
                                <th scope="col">Họ Tên</th>
                                <th scope="col">CMND</th>
                                <th scope="col">MST</th>
                                <th scope="col">Gói CTS</th>
                                <th scope="col">Thời hạn (năm)</th>
                                <th scope="col">Ngày tạo</th>
                                <th scope="col">Người tạo</th>
                                <th scope="col">Trạng thái hồ sơ</th>
                              </tr>
                            </thead>
                            <tbody id="pendingStatus">
                             
                            </tbody>
                        </table>
                    <form  style="display:none" id="formSendMailPersonal" method="POST"></form>

                    </div>
                    <div class="pagin-wrapper"  id="paginPersonal"></div>

                  </div>
                  <div id="CTSDoanhNghiep" class="container tab-pane fade"><br>
                    <div class="row table-wrapper" style="border: 1px solid #aaaaaa;">
                        <table class="table table-bordered" >
                            <thead class="thead-default">
                              <tr>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">STT</th>
                                <th scope="col">Mã yêu cầu</th>
                                <th scope="col">Tên Doanh Ngiệp</th>
                                <th scope="col">Giấy Phép KD</th>
                                <th scope="col">MST</th>
                                <th scope="col">Gói CTS</th>
                                <th scope="col">Thời hạn (năm)</th>
                                <th scope="col">Ngày tạo</th>
                                <th scope="col">Người tạo</th>
                                <th scope="col">Trạng thái hồ sơ</th>
                              </tr>
                            </thead>
                            <tbody id="pendingStatusDN">
                             
                            </tbody>
                        </table>
                    <form style="display:none" id="formSendMailOrganization" method="POST"></form>

                    </div>
                    <div class="pagin-wrapper"  id="paginOrganization"></div>

                  </div> 
                </div>
              </div>
                        <!-- Approved -->
         <h3 class="pl-3">Đã phê duyệt</h3>
         <div class="container">
             <br>
             <!-- Nav tabs -->
             <ul class="nav nav-tabs" role="tablist">
               <li class="nav-item">
                 <a class="nav-link active" data-toggle="tab" href="#CTSCaNhanApproved">Cá Nhân</a>
               </li>
               <li class="nav-item">
                 <a class="nav-link" data-toggle="tab" href="#CTSDoanhNghiepApproved">Doanh Nghiệp</a>
               </li>
             </ul>
           
             <!-- Tab panes -->
             <div class="tab-content">
               <div id="CTSCaNhanApproved" class="container tab-pane active"><br>
                 <div class="row table-wrapper" style="border: 1px solid #aaaaaa;">
                     <table class="table table-bordered">
                         <thead class="thead-default">
                             <tr>
                                 <th scope="col">Chi tiết</th>
                                 <th scope="col">STT</th>
                                 <th scope="col">Trạng thái</th>
                                 <th scope="col">Cấp CTS</th>
                                 <th scope="col">Mã yêu cầu</th>
                                 <th scope="col">Họ Tên</th>
                                 <th scope="col">CMND</th>
                                 <th scope="col">MST</th>
                                 <th scope="col">Gói CTS</th>
                                 <th scope="col">Thời hạn (năm)</th>
                                 <th scope="col">Ngày tạo</th>
                                 <th scope="col">Người tạo</th>
                             
                             </tr>
                         </thead>
                         <tbody id="approvedStatus">
                         </tbody>
                     </table>

                 </div>
                 <div class="pagin-wrapper" id="paginPersonalApproved"></div>
               </div>
               <div id="CTSDoanhNghiepApproved" class="container tab-pane fade"><br>
                 <div class="row table-wrapper" style="border: 1px solid #aaaaaa;">
                     <table class="table table-bordered">
                         <thead class="thead-default">
                             <tr>
                                 <th scope="col">Chi tiết</th>
                                 <th scope="col">STT</th>
                                 <th scope="col">Trạng thái</th>
                                 <th scope="col">Cấp CTS</th>
                                 <th scope="col">Mã yêu cầu</th>
                                 <th scope="col">Tên GD</th>
                                 <th scope="col">CMND</th>
                                 <th scope="col">MST</th>
                                 <th scope="col">Gói CTS</th>
                                 <th scope="col">Thời hạn (năm)</th>
                                 <th scope="col">Ngày tạo</th>
                                 <th scope="col">Người tạo</th>
                               </tr>
                             </thead>
                             <tbody id="approvedStatusDN">
                             </tbody>
                     </table>
                 </div>
                 <div class="pagin-wrapper" id="paginOrgApproved"></div>
               </div> 
             </div>
         </div>
        </div>
        
        <div id='status' style="display:none; visibility:hidden"><%= message %></div>

    </body>
    <script src="/javascripts/listDaiLy2.js" type="module"></script>
    <script src="/javascripts/init.js"></script>
    <script src="/vendor/pagination.js"></script>
</html>

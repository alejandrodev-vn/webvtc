<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('header') %> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="../../../stylesheets/organization.css">
        <link rel="stylesheet" href="../../../stylesheets/adminhome.css">
    </head>

    <body>
        <div class="wrapper">
            <div class="box">
                <div class="header">
                    <a href=""><img src="../../../images/logo.png" alt="logo"></a>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    
                    <% if(typeof notifications == 'undefined' ){ %> 
                        <h1>Xác nhận </h1>
                        <form action="" method="POST" class="text-md-center" style="width: 50%;margin:0 auto">
                            <div class="form-group">
                                <input type="text" class="form-control" name="soDienThoai" readonly value="<%= soDienThoai %>">
                            </div>
                            <input type="submit" value="Gửi mã OTP" class="btn btn-primary btn-sendOTP col-md-6" />
                            <!-- <a class="btn btn-primary col-md-6">Xác nhận OTP</a> -->
                        </form>
                    <% }else{ %> 
                        <h2><%= notifications%></h2>
                    <% } %> 
                    
                </div>
            </div>

        </div>
        

    </body>
  
</html>

<!DOCTYPE html>
<html>
    <head>
        <title>
            Gửi mã xác thực OTP
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('../header') %> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/stylesheets/organization.css">
        <link rel="stylesheet" href="/stylesheets/adminhome.css">
    </head>

    <body>
        <div class="wrapper">
            <div class="box">
                <div class="header">
                    <a href=""><img src="/images/logo.png" alt="logo"></a>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    
                    <% if(typeof message == 'undefined' ){ %> 
                        <h2 style="text-align:center;width:100%">Xác nhận</h2>
                        <form action="/digital-certificate/personal/get-otp/<%= token %>" method="POST" class="text-md-center" style="width: 50%;margin:0 auto">
                            <div class="form-group" style="justify-content: center;">
                                <input type="text" class="form-control" style="padding: 5px;width: 50%;" name="soDienThoai" readonly value="<%= soDienThoai %>">
                            </div>
                            <input type="submit" value="Gửi mã OTP" class="btn btn-primary btn-sendOTP col-md-6" />
                        </form>
                    <% }else{ %> 
                        <h2><%= message %></h2>
                    <% } %> 
                    
                </div>
            </div>

        </div>
        

    </body>
  
</html>
